{
	"name": "XPather",
	"description": "XPaths done the right way.",
	"version": "0.3",

	"browser_action": {
		"default_title": "XPather",
		"default_icon": "icon.png"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+X"
			}
		}
	},

	"content_scripts": [
		{
			"css": ["xpather.css"],
			"js": ["jquery.js", "jquery.xpath.js", "xpather.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_end"
		}
	],

	"permissions": [
		"background", "tabs", "<all_urls>"
	],

	"minimum_chrome_version": "22",
	"offline_enabled": true,
	"manifest_version": 2
}
